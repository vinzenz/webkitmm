  //_WRAP_METHOD(Glib::RefPtr<const QueryField> get_field_by_sql_naming_fields(const Glib::ustring& sql_name, const Glib::SListHandle<Glib::RefPtr<QueryField> >& fields_list) const, gda_query_get_field_by_sql_naming_fields, refreturn, constversion)

  _WRAP_SIGNAL(void type_changed(), "type_changed")
  _WRAP_SIGNAL(void condition_changed(), "condition_changed")
  _WRAP_SIGNAL(void target_added(const Glib::RefPtr<QueryTarget>& target), "target_added")
  _WRAP_SIGNAL(void target_removed(const Glib::RefPtr<QueryTarget>& target), "target_removed")
  _WRAP_SIGNAL(void target_updated(const Glib::RefPtr<QueryTarget>& target), "target_updated")
  _WRAP_SIGNAL(void join_added(const Glib::RefPtr<QueryJoin>& join), "join_added")
  _WRAP_SIGNAL(void join_removed(const Glib::RefPtr<QueryJoin>& join), "join_removed")
  _WRAP_SIGNAL(void join_updated(const Glib::RefPtr<QueryJoin>& join), "join_updated")
  _WRAP_SIGNAL(void sub_query_added(const Glib::RefPtr<Query>& query), "sub_query_added")
