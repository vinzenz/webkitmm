  _WRAP_METHOD(Glib::RefPtr<const QueryCondition> get_condition() const, gda_query_get_condition, refreturn, constversion)
  _WRAP_METHOD(void set_condition(const Glib::RefPtr<QueryCondition>& cond), gda_query_set_condition)
  _WRAP_METHOD(void append_condition(const Glib::RefPtr<QueryCondition>& cond, bool append_as_and = true), gda_query_append_condition)

  #m4 _CONVERSION(`GSList*', `Glib::SListHandle<Glib::RefPtr<QueryCondition> >', `$2($3, Glib::OWNERSHIP_SHALLOW)')
  #m4 _CONVERSION(`GSList*', `Glib::SListHandle<Glib::RefPtr<const QueryCondition> >', `$2($3, Glib::OWNERSHIP_SHALLOW)')
  _WRAP_METHOD(Glib::SListHandle<Glib::RefPtr<QueryCondition> > get_main_conditions(), gda_query_get_main_conditions)
  _WRAP_METHOD(Glib::SListHandle<Glib::RefPtr<const QueryCondition> > get_main_conditions() const, gda_query_get_main_conditions)

