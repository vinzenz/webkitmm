  #m4 _CONVERSION(`GSList*', `Glib::SListHandle<Glib::RefPtr<QueryJoin> >', `$2($3, Glib::OWNERSHIP_SHALLOW)')
  #m4 _CONVERSION(`GSList*', `Glib::SListHandle<Glib::RefPtr<const QueryJoin> >', `$2($3, Glib::OWNERSHIP_SHALLOW)')
  _WRAP_METHOD(Glib::SListHandle<Glib::RefPtr<QueryJoin> > get_joins(), gda_query_get_joins)
  _WRAP_METHOD(Glib::SListHandle<Glib::RefPtr<const QueryJoin> > get_joins() const, gda_query_get_joins)

