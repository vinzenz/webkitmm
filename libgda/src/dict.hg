  _WRAP_METHOD(bool save_xml_file(const std::string& xmlfile), gda_dict_save_xml_file, errthrow)

  _WRAP_METHOD(Glib::RefPtr<DataHandler> get_handler(GType for_type), gda_dict_get_handler, refreturn)
  _WRAP_METHOD(Glib::RefPtr<const DataHandler> get_handler(GType for_type) const, gda_dict_get_handler, refreturn, constversion)
