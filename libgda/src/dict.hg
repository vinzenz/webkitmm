  _WRAP_METHOD(Glib::RefPtr<DictType> get_dict_type_by_xml_id(const Glib::ustring& xml_id), gda_dict_get_dict_type_by_xml_id, refreturn)
  _WRAP_METHOD(Glib::RefPtr<const DictType> get_dict_type_by_xml_id(const Glib::ustring& xml_id) const, gda_dict_get_dict_type_by_xml_id, refreturn, constversion)

